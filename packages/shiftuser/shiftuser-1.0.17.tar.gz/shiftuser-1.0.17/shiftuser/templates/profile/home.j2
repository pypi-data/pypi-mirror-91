{% extends 'kernel_layout.j2' %}


{% block content %}
<div class="site-wrapper">
    <div class="site-wrapper-inner">
        <div class="cover-container cover-container-profile">




            <div class="form-box profile-data">

                {# profile nav #}
                {% if myself %}
                <div class="navigation">
                    <ul class="nav nav-tabs">
                        {% for item in nav.profile %}
                        <li class="{{ 'active' if item.is_active else '' }}">
                            <a href="{{ item.url }}">{{ item.label }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}



                <div class="row">
                    <div class="col-sm-3 col-md-3 col-lg-3">
                        <img src="{{ user.gravatar('200x200') }}" class="avatar"/>
                    </div>
                    <div class="col-sm-9 col-md-9 col-lg-9">

                        <h2>{{ user.email }}</h2>

                        <table class="table table-striped table-bordered user-summary">

                            {# email #}
                            <tr>
                                <td class="field">Email</td>
                                <td class="value"><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
                            </tr>

                            {# registered #}
                            <tr>
                                <td class="field">Registered</td>
                                <td class="value">{{ user.created  }}</td>
                            </tr>

                            </tbody>
                        </table>


                    </div>
                </div>




            </div>


        </div>
    </div>
</div>

{% endblock %}