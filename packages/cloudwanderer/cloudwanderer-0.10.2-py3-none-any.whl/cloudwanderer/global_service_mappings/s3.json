{
    "service": {
        "region": "us-east-1",
        "regionalResources": true
    },
    "resources": {
        "bucket": {
            "regionRequest": {
                "operation": "get_bucket_location",
                "params": [
                    { "target": "Bucket", "source": "resourceAttribute", "name": "name" }
                ],
                "pathToRegion": "LocationConstraint",
                "defaultValue": "us-east-1"
            }
        }
    }
}