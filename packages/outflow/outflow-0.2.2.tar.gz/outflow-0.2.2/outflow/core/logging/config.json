{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "color": {
            "()": "outflow.core.logging.TerminalColorFormatter",
            "format": "%(asctime)s - %(name)s - %(filename)s:%(lineno)s - %(levelname)s - %(message)s"
        },
        "simple": {
            "format": "%(asctime)s - %(name)s - %(filename)s:%(lineno)s - %(levelname)s - %(message)s"
        },
        "html": {
            "format": "<div><p><span style='color: green;'>%(asctime)s</span> :: <span style='color: red;'>%(name)s</span> :: <span style='color: orange;'>%(levelname)s</span> :: %(message)s</p></div><br>"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "color",
            "stream": "ext://sys.stdout"
        },
        "null_handler": {
            "class": "logging.NullHandler",
            "level": "DEBUG"
        }
    },

    "loggers": {
        "": {
            "handlers": ["null_handler"]
        },
        "outflow": {
            "level": "INFO",
            "handlers": ["console"]
        },
        "sqlalchemy": {
            "level": "WARNING",
            "handlers": ["console"]
        },
        "alembic": {
            "level": "INFO",
            "handlers": ["console"]
        },
        "weasyprint": {
            "level": "WARNING",
            "handlers": ["console"]
        }
    }
}
