---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: discovery
  labels:
    app.kubernetes.io/name: discovery
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: discovery
  template:
    metadata:
      labels:
        app.kubernetes.io/name: discovery
    spec:
      containers:
        - name: discovery
          image: {{ DOCKER_REGISTRY }}{{ DISCOVERY_DOCKER_IMAGE }}
          ports:
            - containerPort: 8000
          env:
            - name: DJANGO_SETTINGS_MODULE
              value: course_discovery.settings.grvlms.production
          volumeMounts:
            - mountPath: /openedx/discovery/course_discovery/settings/grvlms/production.py
              name: settings
              subPath: production.py
      volumes:
        - name: settings
          configMap:
            name: discovery-settings
