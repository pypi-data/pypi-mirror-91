{
    "name": "mlprimitives.custom.feature_extraction.StringVectorizer",
    "contributors": [
        "Carles Sala <csala@csail.mit.edu>"
    ],
    "description": "mlprimitives.custom.feature_extraction.StringVectorizer",
    "classifiers": {
        "type": "preprocessor",
        "subtype": "feature_extractor"
    },
    "modalities": [],
    "primitive": "mlprimitives.custom.feature_extraction.StringVectorizer",
    "fit": {
        "method": "fit",
        "args": [
            {
                "name": "X",
                "type": "DataFrame"
            }
        ]
    },
    "produce": {
        "method": "transform",
        "args": [
            {
                "name": "X",
                "type": "DataFrame"
            }
        ],
        "output": [
            {
                "name": "X",
                "type": "DataFrame"
            }
        ]
    },
    "hyperparameters": {
        "fixed": {
            "keep": {
                "type": "bool",
                "default": false
            },
            "copy": {
                "type": "bool",
                "default": true
            },
            "features": {
                "type": "str or list",
                "default": "auto"
            },
            "input": {
                "type": "str",
                "default": "content"
            },
            "decode_error": {
                "type": "str",
                "default": "ignore"
            },
            "analyzer": {
                "type": "str",
                "default": "word"
            },
            "min_words": {
                "type": "int",
                "default": 3
            }
        },
        "tunable": {
            "lowercase": {
                "type": "bool",
                "default": true
            },
            "binary": {
                "type": "bool",
                "default": true
            },
            "max_features": {
                "type": "int",
                "default": 1000,
                "range": [
                    1,
                    10000
                ]
            }
        }
    }
}
