#!/bin/sh

version=0.07.7
package_name=opentrep
package_pretty_name=OpenTREP
prefix=/Users/darnaud/dev/geo/opentrep/_skbuild/macosx-11.1-x86_64-3.9/cmake-install
exec_prefix=${prefix}
#libdir=/Users/darnaud/dev/geo/opentrep/_skbuild/macosx-11.1-x86_64-3.9/cmake-install/lib
libdir=`pkg-config --variable=libdir ${package_name}`
libexecdir=`pkg-config --variable=libexecdir ${package_name}`
includedir=/Users/darnaud/dev/geo/opentrep/_skbuild/macosx-11.1-x86_64-3.9/cmake-install/include
datarootdir=/Users/darnaud/dev/geo/opentrep/_skbuild/macosx-11.1-x86_64-3.9/cmake-install/share
datadir=/Users/darnaud/dev/geo/opentrep/_skbuild/macosx-11.1-x86_64-3.9/cmake-install/share
pkgdatadir=/Users/darnaud/dev/geo/opentrep/_skbuild/macosx-11.1-x86_64-3.9/cmake-install/share/opentrep
sampledir=
docdir=/Users/darnaud/dev/geo/opentrep/_skbuild/macosx-11.1-x86_64-3.9/cmake-install/share/doc/opentrep-0.07.7
mandir=/Users/darnaud/dev/geo/opentrep/_skbuild/macosx-11.1-x86_64-3.9/cmake-install/share/man
infodir=/Users/darnaud/dev/geo/opentrep/_skbuild/macosx-11.1-x86_64-3.9/cmake-install/share/info

usage()
{
  cat <<EOF
Usage: ${package_name}-config [OPTION]

Known values for OPTION are:

  --prefix        print $package_pretty_name installation prefix
  --libs          print library linking information
  --cflags        print pre-processor and compiler flags
  --help          display this help and exit
  --version       output version information
EOF
  exit $1
}

if test $# -eq 0; then
  usage 1
fi

cflags=false
libs=false

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      ;;

    --prefix)
      echo $prefix
      ;;

    --libdir)
      echo $libdir
      ;;

    --libexecdir)
      echo $libexecdir
      ;;

    --version)
      echo $version
      ;;

    --help)
      usage 0
      ;;

    --cflags)
      if [ "${prefix}" != "/usr" ]; then
        echo -I${includedir}
      else
        echo
      fi
      ;;

    --libs)
      echo -L${libdir} -l${package_name}
      ;;

    *)
      usage
      exit 1
      ;;
  esac
  shift
done
