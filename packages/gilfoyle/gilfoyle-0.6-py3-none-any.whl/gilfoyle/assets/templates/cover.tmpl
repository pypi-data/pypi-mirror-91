    <section class="hero is-fullheight .container.is-fullhd cover">
        <div class="hero-body cover">
            <div class="container">
                <h1 class="title is-1 cover">{{ page.page_title }}</h1>
                <h2 class="subtitle is-3 cover">{{ page.page_subheading }}</h2>
            </div>
        </div>
    </section>
    <!-- Cover -->
{% endif %}